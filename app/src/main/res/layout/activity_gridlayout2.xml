<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_red_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="schemeRedPacket" />

    <Button
        android:id="@+id/bt_test_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="test params" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" />

    <GridLayout
        android:id="@+id/gv_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="1" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_rowSpan="4"
            android:layout_gravity="fill"
            android:text="转账" />


        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="4" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="5" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="6" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="7" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="." />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0" />

        <Button
            android:layout_width="wrap_content"

            android:layout_height="40dp"
            android:text="*" />
    </GridLayout>
</LinearLayout>
