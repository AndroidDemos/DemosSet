<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/button1"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/text_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="button下方弹窗"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#C79EFE"
        android:gravity="center"
        android:padding="10dp"
        android:text="button上方弹窗"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#74D6AF"
        android:gravity="center"
        android:padding="10dp"
        android:text="pop菜单弹窗"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#E38A7C"
        android:gravity="center"
        android:padding="10dp"
        android:text="pop ListView列表"
        android:textColor="@android:color/white"
        android:textSize="15sp" />


    <include
        android:id="@+id/include1"
        layout="@layout/merge_verticle_2_bt_layout" />

    <include
        android:id="@+id/include2"
        layout="@layout/merge_verticle_2_bt_layout" />
</LinearLayout>
