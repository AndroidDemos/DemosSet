<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/textCenter"
        android:gravity="center"
        android:text="ImageLevel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />
    </LinearLayout>


    <TextView
        style="@style/textCenter"
        android:gravity="center"
        android:text="Transition" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />

    </LinearLayout>

    <TextView
        style="@style/textCenter"
        android:gravity="center"
        android:text="Inset Drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="#33aa44"
            android:scaleType="centerInside" />

    </LinearLayout>

    <TextView
        style="@style/textCenter"
        android:gravity="center"
        android:text="Clip Drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv31"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="#33aa44" />

        <ImageView
            android:id="@+id/iv32"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="#33aa44" />

    </LinearLayout>

    <TextView
        style="@style/textCenter"
        android:gravity="center"
        android:text="Drawable Mixing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv41"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/oval_stroke" />

    </LinearLayout>
</LinearLayout>